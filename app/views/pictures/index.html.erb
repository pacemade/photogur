<h1>Pictures (<%= @pictures.length %>)</h1>


<h1>Most recent pictures</h1>
<ul>
  <% @most_recent_pictures.each do |picture| %>
    <li><%= picture.title %></li>
  <% end %>
</ul>

<ul>
  <div class="pictures_index">
    <% @pictures.each do |picture| %>
      <div class="img">
        <li><%= link_to(image_tag(picture.url), "/pictures/#{picture.id}") %></li>
          <p>Title: <%= picture.title %></p>
          <p>Artist: <%= picture.artist %></p>
          <p>Comments: <%= picture.comments.count %></p>
        </li>
      </div>
    <% end %>
  </div>
</ul>
